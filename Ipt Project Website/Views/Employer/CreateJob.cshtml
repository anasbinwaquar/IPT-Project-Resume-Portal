@model Ipt_Project_Website.Models.Job_post

@{
    ViewBag.Title = "CreateJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add new job/vacancy</h2>


@using (Html.BeginForm("CreateJob", "Employer", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Job_post</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.UploadFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="UploadFile" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Job_designation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Job_designation" id="des">
                <option value="Java Developer">Java Developer</option>
                <option value="Testing">Testing</option>
                <option value="DevOps Engineer">DevOps Engineer</option>
                <option value="Python Developer">Python Developer</option>
                <option value="Web Designing">Web Designing</option>
                <option value="HR">HR</option>
                <option value="Hadoop">Hadoop</option>
                <option value="Data Science">Data Science</option>
                <option value="Mechanical Engineer">Mechanical Engineer</option>
                <option value="Sales">Sales</option>
                <option value="Operations Manager">Operations Manager</option>
                <option value="ETL Developer">ETL Developer</option>
                <option value="Blockchain">Blockchain</option>
                <option value="Arts">Arts</option>
                <option value="Database">Database</option>
                <option value="Health and fitness">Health and fitness</option>
                <option value="PMO">PMO</option>
                <option value="Business Analyst">Business Analyst</option>
                <option value="DotNet Developer">DotNet Developer</option>
                <option value="Automation Testing">Automation Testing</option>
                <option value="Network Security Engineer">Network Security Engineer</option>
                <option value="Automation Testing">Automation Testing</option>
                <option value="SAP Developer">SAP Developer</option>
                <option value="Advocate">Advocate</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
